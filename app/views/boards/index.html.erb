<% content_for(:title, (t '.title') ) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= search_form_for(@q, url: boards_path) do |f| %>
        <div class="input-group mb-3"><%= f.text_field :title_or_body_cont, class:"form-control", placeholder:"検索ワード" %>
          <div class="input-group-append"><%= f.submit '検索', class:"btn btn-primary" %></div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.exists? %>
          <%= render @boards %>
        <% else %>
          <h4>掲示板がありません</h4>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @boards %>
</div>
