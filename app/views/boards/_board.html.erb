<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
      <%= image_tag board.board_image.url, class: 'card-img-top img-fluid', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#"><%= link_to board.title, board_path(board) %></a>
        </h4>
        <% if board.user == current_user %>
          <div class='mr10 float-right'>
            <%= link_to edit_board_path(board), id: ('button-edit-' + board.id.to_s)  do %>
              <%= icon 'fa', 'pen' %>
            <% end %>
            <%= link_to board_path(board), id: ('button-delete-' + board.id.to_s), method: :delete, data: {confirm: '削除しますか？'} do %>
              <%= icon 'fas', 'trash' %>
            <% end %>
          </div>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i> <%= board.decorate.full_name %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i> <%= l (board.created_at) %></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
