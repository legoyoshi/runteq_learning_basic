<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with(model: @board, local: true) do |f| %>
        <%= render 'shared/error_messages', model: @board %>

        <div class="form-group">
          <%= f.label :title, Board.human_attribute_name(:title) %>
          <%= f.text_field :title, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :body, Board.human_attribute_name(:body) %>
          <%= f.text_area :body, class: 'form-control', row: '10', style: 'height: 200px'%>
        </div>
        <div class="form-group">
          <%= f.label :board_image, Board.human_attribute_name(:board_image) %>
          <%= f.file_field :board_image, class: 'form-control' %>
        </div>
        <%= f.submit (t '.create'), class: "btn btn-primary", data: { disable_with: (t '.create')} %>
      <% end %>
    </div>
  </div>
</div>
