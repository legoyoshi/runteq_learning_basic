<% content_for(:title, @board.title ) %>
<%= render 'shared/flash_message' %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= link_to '編集', edit_admin_board_path(@board), class: 'btn btn-success float-right' %>
      <%= link_to "削除", admin_board_path(@board), class: "btn btn-danger", method: :delete, data: { confirm: '削除してよろしいですか？' } %>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @board.board_image.url, class: 'card-img-top img-fluid', size: '300x200' %>
            </div>
            <div class='col-md-9'>
              <h3 style='display: inline;'><%= @board.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= @board.decorate.full_name %></li>
                <li class="list-inline-item"><%= l (@board.created_at) %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@board.body) %></p>
        </div>
      </article>
    </div>
  </div>
</div>
